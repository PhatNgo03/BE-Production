extends ../../layouts/default.pug

block main
  h1 Danh sách sản phẩm


  table.table.table-hover.table-sm 
    thead
      tr 
        th STT 
        th Hình Ảnh 
        th Tiêu đề
        th Giá
        th Trạng thái 
        th Hành động

    tbody
      each item, index in products
        tr 
          td #{index + 1}
          td 
            img(
              src=item.thumbnail,
              alt=item.title,
              width="100px",
              height="auto"
            )
          td #{item.title}
          td #{item.price}$
          td 
            if(item.status === "active")
              a(href="#" class="badge badge-success") Hoạt động 
            else 
              a(href="#" class="badge badge-danger") Dừng hoạt động 
            
          td 
            button(class="btn btn-warning btn-sm mx-1") Sửa
            button(class="btn btn-danger btn-sm") Xóa



