extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)

  .container.my-5.d-flex.justify-content-center 
    .card.shadow-lg.p-4.rounded-lg(style="max-width: 400px; width: 100%")
      .card-body
        h1.text-center.text-primary.mb-4  Lấy lại mật khẩu
        form(
          action=`/user/password/forgot`
          method="POST"
        )
          .mb-3
            label.form-label(for="email") Email
            input.form-control(
              type="email"
              id="email"
              name="email"
              placeholder="Nhập email của bạn"
            )
          .d-grid
            button.btn.btn-primary.btn-lg(type="submit") Gửi mail xác nhận
