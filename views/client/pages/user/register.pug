extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
  +alert-success(3000)
  +alert-error(3000)
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-sm-8.col-12
        .card.shadow.p-4
          +box-head("Đăng ký tài khoản")
          form(action="/user/register" method="POST")
            .mb-3
              label.form-label(for="fullName") Họ tên
              input.form-control(type="text" name="fullName" id="fullName")
            .mb-3
              label.form-label(for="email") Email
              input.form-control(type="email" name="email" id="email")
            .mb-3
              label.form-label(for="password") Mật khẩu
              input.form-control(type="password" name="password" id="password")
            button.btn.btn-primary.w-100(type="submit") Đăng Ký
