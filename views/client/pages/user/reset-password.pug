extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)

  .container.my-5.d-flex.justify-content-center 
    .card.shadow-lg.p-4.rounded-lg(style="max-width: 400px; width: 100%")
      .card-body
        h1.text-center.text-primary.mb-4 Đổi mật khẩu
        form(
          action=`/user/password/reset`
          method="POST"
        )
          .mb-3
            label.form-label(for="password") Mật khẩu mới
            input.form-control(
              type="password"
              id="password"
              name="password"
              placeholder="Nhập mật khẩu mới"
            )
          .mb-3
            label.form-label(for="confirmPassword") Xác nhận mật khẩu mới
            input.form-control(
              type="password"
              id="confirmPassword"
              name="confirmPassword"
              placeholder="Xác nhận mật khẩu mới"
            )
          .d-grid
            button.btn.btn-primary.btn-lg(type="submit") Đổi mật khẩu